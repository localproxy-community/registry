{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "extensions": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "repo": {
              "anyOf": [
                {
                  "type": "string",
                  "pattern": "^[A-Za-z0-9._-]+/[A-Za-z0-9._-]+$"
                },
                {
                  "type": "string",
                  "format": "uri"
                }
              ]
            }
          },
          "required": ["name", "repo"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["version", "extensions"],
  "additionalProperties": false
}
