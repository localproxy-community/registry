{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "extensions": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "repo": {
              "type": "string"
            }
          },
          "required": ["name", "repo"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["version", "extensions"],
  "additionalProperties": false
}